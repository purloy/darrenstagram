

	
		<div class="posts-wrapper row">
			<% @posts.order("created_at asc").each do |post| %>
				<div class = "post">
					<div class="post-head">
						<div class ="name">
							<p>Posted by: <%= post.user.email %></p>
							<cite><small><%= l post.created_at, :format => :short %> </small></cite>
						</div>
					</div>

					<div class="image center-block">
						
							<%= link_to (image_tag post.image.url, class: 'image-index'), post_path(post) %><br>
						
					</div>
					<p class ="p-center"><strong><%= post.description %></strong><p>	
				</div>
			<% end %>
		</div>
