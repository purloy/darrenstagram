

<div class = "form-wrapper">

	<%= simple_form_for @post, html: { :multipart => true} do |f| %>
		<div class= "form-group">
			<%= f.file_field :image %>
		</div>

		<div class= "form-group text-center">
			<%= f.input :description %>
		</div>

		<div class= "form-group text-center">
			<%= f. button :submit, class: "btn btn-success" %>
		</div>
		
	<% end %>
</div>
