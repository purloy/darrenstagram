
<div class = "form-wrapper">

	<%= simple_form_for @post, :html => { :multipart => true} do |f| %>

		<div class= "form-group text-center">
			<%= f.file_field :image %>
		</div>

		<div class= "form-group text-center">
			<%= f.label :description %>	
			<%= f.text_field :description %>
		</div>

		<div class= "form-group text-center">
			<%= f.submit "Post", class: "btn btn-success" %>
		</div>

	<% end %>
</div>

