<div class = "form-wrapper">

	<%= simple_form_for([@post, @comment]) do |f| %>
		<div class= "form-group text-center">
			<div id ="rating-form">
				<label>Rate: </label>
			</div>
		</div>

		<div class= "form-group text-center">
			<%= f.input :comment %>
		</div>

		<div class= "form-group text-center">
			<%= f.button :submit, class: "btn btn-success" %>
		</div>
		
	<% end %>
</div>

<script>
	$('#rating-form').raty({
		path: '/assets',
		scoreName: 'comment[rating]'
	});

</script>